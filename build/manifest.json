{
    "manifest_version": 2,
    "name": "HomePage+",
    "version": "0.6.1",
    "description": "New tab replacement, various widgets and components",
    "author": "Mooseman Studios",
    "short_name": "HP+",

    "chrome_url_overrides": {
        "newtab": "index.html"
    },

    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },

    "permissions": [
        "geolocation",
        "tabs",
        "storage"
    ],

    "background": {
        "scripts": ["js/background.min.js"]
    },

    "browser_action": {
        "default_icon": {
            "19": "img/icon16.png"
        },
        "default_title": "Home Page"
    },

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
